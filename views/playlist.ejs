<div id="video-template" class="row template video" data-video-idx="">
  <div class="col-sm-3">
    <img id="videoimg" src="" class="img-responsive">
  </div>
  <div id="title" class="col-sm-9 title"></div>
  <div id="description" class="col-xs-6 col-sm-9 description"></div>
  <div id="additional" class="col-xs-6 col-sm-9 description"></div>
</div>

<div id="qa-template" class="template">
  <div><a id="itembutton" class="fa fa-trash fa-2x text-danger" data-video-id=""></a></div>
  <form>
    <div class="question"><label>Question</label><input type="text" id="questiontext" /></div>
    <div class="answers ">
      <label>Answers</label><a class="addanswer">+</a>
      <div class="answer">
        <span>
          <input type="radio" name="correctanswer">
        </span>
        <input type="text" id="answertext"><a class="removeanswer">-</a>
      </div>
    </div>
  </form>
</div>
