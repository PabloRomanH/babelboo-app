    <div id="description" class="row description"></div>
  </div>
  <div class="col-sm-12">
    <div id="additional" class="row description"></div>
  </div>
</div>

<div id="qa-template" class="col-sm-12 template">
  <div><a id="itembutton" class="fa fa-trash fa-2x text-danger" data-video-id=""></a></div>
  <form>
    <div class="question"><input type="text" id="questiontext" placeholder="Question" /></div>
    <div class="answers">
      <div class="answer">
        <span>
          <input type="radio" name="correctanswer">
        </span>
        <input type="text" id="answertext" placeholder="Answer" ><a class="removeanswer">-</a>
      </div>
    </div>
    <a class="addanswer">+</a>
  </form>
</div>
