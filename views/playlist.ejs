<div class="row">
  <div class="col-sm-7">
    <div class="row">
      <div class="input-group searchbox col-sm-12" >
        <span class="input-group-btn">
          <button id="btn-search" class="btn btn-primary" type="button"><i class="fa fa-search"></i></button>
        </span>
        <input id="input-search" name="query" type="text" class="form-control" placeholder="Search...">
      </div>
    </div>
    <div id="result" class="row">
    </div>
  </div>

  <div class="col-sm-5">
    <div>
      <form>
        <div class="input-group">
          <span class="input-group-addon">Name</span>
          <input type="text" class="form-control" name="title" placeholder="Playlist name">
        </div>

        <div class="input-group">
          <span class="input-group-addon">Tags</span>
          <input type="text" class="form-control" name="tags" placeholder="Playlist tags">
        </div>

        <a id="btn-submit" class="btn btn-primary">Save</a>
      </form>
    </div>
    <div id="playlist-videos"></div>
  </div>
</div>


